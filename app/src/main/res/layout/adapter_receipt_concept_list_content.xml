<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:weightSum="4"
              android:paddingTop="@dimen/margin_extra_mini"
              android:paddingBottom="@dimen/margin_extra_mini">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="3">

        <TextView
            style="@style/ItemTitle"
            android:id="@+id/receipt_concept_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            style="@style/ItemContent"
            android:id="@+id/receipt_concept_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <TextView
        style="@style/ItemBigTitle"
        android:id="@+id/receipt_concept_total"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        />



</LinearLayout>