<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="@dimen/receipt_item_width"
              android:layout_height="@dimen/receipt_item_height"
              android:orientation="vertical"
              android:layout_gravity="center"
              android:layout_marginLeft="@dimen/margin_extra_small"
              android:layout_marginStart="@dimen/margin_extra_small"
              android:gravity="center"
              app:slm_headerDisplay="overlay|sticky"
              app:slm_isHeader="true"
    >

    <TextView
        style="@style/Title2"
        android:id="@+id/receipt_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/repair_order_date_number"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        style="@style/Title2b"
        android:id="@+id/receipt_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/repair_order_date_month"
        />
</LinearLayout>