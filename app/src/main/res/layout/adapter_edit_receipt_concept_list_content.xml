<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/margin_extra_mini"
                android:paddingBottom="@dimen/margin_extra_mini">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/receipt_concept_total"
        android:layout_toStartOf="@+id/receipt_concept_total"
        android:orientation="vertical"
        >

        <TextView
            style="@style/ItemTitle"
            android:id="@+id/receipt_concept_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            style="@style/ItemContent"
            android:id="@+id/receipt_concept_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>



    <TextView
        style="@style/ItemBigTitle"
        android:id="@+id/receipt_concept_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_extra_small"
        android:layout_marginEnd="@dimen/margin_extra_small"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/remove_concept"
        android:layout_toStartOf="@+id/remove_concept"
        />

    <ImageView
        android:id="@+id/remove_concept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_delete_teal_700_18dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_extra_small"
        android:layout_marginEnd="@dimen/margin_extra_small"/>


</RelativeLayout>